<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:textAlignment="center"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/des_quoteid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="15sp"
        android:fontFamily="serif"
        android:text="TextView" />

    <TextView
        android:id="@+id/desi_quote_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="15sp"
        android:fontFamily="serif"
        android:text="TextView" />

    <TextView
        android:id="@+id/desi_quote_cat_id"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="15sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/desi_quote_cat"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="15sp"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/desi_quote_quote"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:textSize="15sp"
        android:fontFamily="serif"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/desi_quote_author"
        android:padding="10dp"
        android:textSize="15sp"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/desi_quote_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:text="TextView" />

</LinearLayout>