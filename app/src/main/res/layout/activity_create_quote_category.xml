<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateQuoteCategory"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Quote"
        android:textSize="35sp"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Spinner
        android:id="@+id/create_quote_catid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/quotes_cat_id" />

    <Spinner
        android:id="@+id/create_quote_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/quotes_cat" />

    <EditText
        android:id="@+id/create_quotes_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quote id" />


    <EditText
        android:id="@+id/create_quotes_quotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quote"
        android:maxLines="4"
        android:lines="4" />

    <EditText
        android:id="@+id/create_quotes_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quote Author" />

    <EditText
        android:id="@+id/create_quote_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quote Description" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_quote_tmptxt"
        android:hint="temp text" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/create_quote_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/create_quote_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:layout_gravity="center" />

    </FrameLayout>

</LinearLayout>